<!-- Heading da página -->
<section id="catalogo-heading-section">
    <a href="http://localhost/local/catalogo/view.php" class="text-decoration-none">
        <h1>EDITAIS</h1>
    </a>
</section>

<!-- Page Wrapper -->
<div class="catalogo-page-wrapper">
    
    <!-- Container para a busca e o filtro -->
    <div id="catalogo-filter-container">
    
        <!-- Seção de busca -->
        <section id="catalogo-search-section">
            <label for="catalogo-search">Buscar editais:</label>
            <div class="catalogo-input-button-wrapper">
                <input type="text" id="catalogo-search" name="search" placeholder="Digite palavras-chave">
                <button type="submit">Buscar</button>
            </div>
        </section>
    
        <!-- Seção de filtro por categorias -->
        <section id="catalogo-filter-section">
            <label for="catalogo-category">Filtrar por categoria:</label>
            <div class="catalogo-input-button-wrapper">
                <select id="catalogo-category" name="category">
                    <option value="">Todas as categorias</option>
                    {{#categories}}
                        <option value="{{.}}">{{.}}</option>
                    {{/categories}}
                </select>
                <button type="submit">Filtrar</button>
            </div>
        </section>
    </div>
    
    
    <!-- Container principal da lista de editais -->
    <div id="catalogo-list-container">
    
        <!-- Quantidade de editais encontrados -->
        <p class="catalogo-list-count">{{#courses}}{{count}}{{/courses}} editais encontrados.</p>
    
        <!-- Lista de editais -->
        <div class="catalogo-list-wrapper">
            <!-- Item de edital -->
            {{#courses}}
            <div class="catalogo-list-item d-flex flex-md-row flex-column">
                <div class="catalogo-item-content">
                    <!-- Imagem ou logotipo -->
                    <a href="{{intropage_url}}" target="_blank" class="catalogo-item-image">
                        <img src="https://picsum.photos/id/1{{id}}/200" alt="Logotipo do edital {{fullname}}">
                    </a>
    
                    <!-- Informações principais -->
                    <div class="catalogo-item-info d-flex">
                        <!-- Título do edital -->
                        <a href="{{intropage_url}}" target="_blank">
                            <h5 class="catalogo-item-title m-0">{{fullname}}</h5>
                        </a>
                        <!-- Organização -->
                        <p class="catalogo-item-organization m-0">{{category.path}}</p>
    
                        <!-- Público-Alvo -->
                        
                        <div class="catalogo-item-interests mt-auto">
                            <p class="text-muted small m-0">Público-Alvo:</p>
                            <div class="catalogo-interest-tags">
                                {{#custom_fields.target_tags}}
                                <span class="catalogo-tag">{{.}}</span>
                                {{/custom_fields.target_tags}}
                            </div>
                        </div>
                       
                    </div>
                </div>
    
                <!-- Informações adicionais e botão -->
                <div class="catalogo-item-extra">
                    <!-- Prazo de inscrição -->
                    <div class="catalogo-item-dates">
                        <p class="catalogo-deadline">
                            Inscrições até: <strong>{{enrolment.enrolend}}</strong>
                        </p>
                    </div>
    
                    <!-- Botão de acesso -->
                    <a href="{{intropage_url}}" target="_blank" class="catalogo-item-button">Ir para o Edital</a>
                </div>
            </div>
            {{/courses}}
        </div>
    
        <!-- Paginação -->
        <div class="catalogo-pagination">
            <div class="catalogo-pagination-info">
                <p>Página 1 de 4</p>
            </div>
            <div class="catalogo-pagination-controls">
                <button class="catalogo-page-button" disabled>Anterior</button>
                <button class="catalogo-page-button">Próximo</button>
            </div>
        </div>
    </div>
</div>
